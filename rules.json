// Tizen Remote Control (Televizyon Uzaktan Kumanda - Uzaktan Kumanda)
document.addEventListener('keydown', function(e) {
    console.log("Tuş Basıldı: " + e.keyCode);
    switch(e.keyCode) {
        case 37: // Sol
            console.log("Sola gidiliyor...");
            break;
        case 39: // Sağ
            console.log("Sağa gidiliyor...");
            break;
        case 13: // OK
            alert("Seçildi!");
            break;
        case 10009: // Geri
            if(window.tizen) tizen.application.getCurrentApplication().hide();
            break;
    }
});
