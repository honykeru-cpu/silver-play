// Tizen Kumanda Tuşlarını Tanımlama (Remote Key Mapping - Uzaktan Kumanda Tuş Eşlemesi)
document.addEventListener('keydown', function(e) {
    console.log("Basılan Tuş Kodu: " + e.keyCode);
    
    switch(e.keyCode) {
        case 37: // Sol (Left)
            // Sol tuş fonksiyonunu buraya çağır
            break;
        case 38: // Yukarı (Up)
            break;
        case 39: // Sağ (Right)
            // Sağ tuş fonksiyonunu buraya çağır
            break;
        case 40: // Aşağı (Down)
            break;
        case 13: // Tamam (Enter/OK)
            // Seçili olanı açma fonksiyonu
            break;
        case 10009: // Geri (Return/Back)
            // Uygulamadan çıkmak veya geri gelmek için
            tizen.application.getCurrentApplication().hide(); 
            break;
    }
});
