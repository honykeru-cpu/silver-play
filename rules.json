// Seçili butonu takip et
let currentIndex = 0;
const boxes = document.querySelectorAll('.box');

// İlk kutuyu otomatik seç
if(boxes.length > 0) boxes[0].classList.add('selected');

// Kumanda veya Klavye Kontrolü
document.addEventListener('keydown', function(e) {
    boxes[currentIndex].classList.remove('selected');

    if (e.keyCode === 39) { // SAĞ
        currentIndex = (currentIndex + 1) % boxes.length;
    } else if (e.keyCode === 37) { // SOL
        currentIndex = (currentIndex - 1 + boxes.length) % boxes.length;
    } else if (e.keyCode === 13) { // OK / ENTER (Tıklama)
        const url = boxes[currentIndex].getAttribute('href');
        if(url !== "#") window.location.href = url;
    }

    boxes[currentIndex].classList.add('selected');
});

// Fare imleci hareketi (Daha önce konuştuğumuz o küçük ok)
const cursor = document.getElementById('cursor');
document.addEventListener('mousemove', (e) => {
    cursor.style.left = e.clientX + 'px';
    cursor.style.top = e.clientY + 'px';
});
